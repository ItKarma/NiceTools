  <style>
    .form-container {
      background-color: #131516;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .header-title {
      color: #a99e9e;
      text-align: center;
      margin-bottom: 20px;
    }

    .painel {
      background-color: #141516;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
    }

    .painel p {
      color: #ffb400;
    }

    .btn-container {
      display: flex;
      justify-content: space-between;
    }

    .btn-container button {
      width: 38%;
      padding: 5px 0;
      font-size: 18px;
      font-weight: bold;
    }

    .btn-primary {
      outline: none; 
      background-color: #3f6cff;
      color: #fff;
      border: none;
      border-radius: 50px;
    }

    .btn-danger {
      outline: none; 
      background-color: #2a1e2b;
      color: #7e7c89;
      border: none;
      border-radius: 50px;
    }

    .textarea-fixa {
      background-color: #000000;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      color: #fff;
      border: none;
      outline: none;
    }

    .textarea-fixa:focus {
      outline: none;
      /* Remove o contorno */
      box-shadow: 0 0 5px #3f6cff;
      /* Adiciona uma sombra ao focar */
    }

    .resultado-aprovados,
    .resultado-reprovados {
      flex: 1;
      background-color: #141516;
      padding: 10px;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .resultado-aprovados h5,
    .resultado-reprovados h5 {
      margin-bottom: 10px;
    }

    footer {
      text-align: center;
      color: #7e7c89;
      padding: 20px 0;
    }
  </style>
</head>

<body class="dark-layout">

  <%- include('includes/header'); %>
    <%- include('includes/nav'); %>

      <main class="nt__main">
        <div class="form-container">
          <h2 class="header-title">GG DEBITANDO [ <i class='bx bxl-visa'></i>/<i class='bx bxl-mastercard'></i> ]</h2>

          <form>

            <textarea class="textarea-fixa" id="exampleTextarea" rows="4"
              placeholder="Ex: 4984080001323389|07|2028|995"></textarea>
          </form>

          <div class="painel">
            <p class="text-primary"><strong><i class='bx bx-loader-alt'></i> Carregadas:</strong> <span
                id="carregadas">0</span></p>
            <p class="text-success"><strong><i class='bx bx-check'></i> Aprovadas:</strong> <span
                id="aprovadas">0</span></p>
            <p class="text-danger"><strong><i class='bx bx-x'></i> Reprovadas:</strong> <span id="reprovadas">0</span>
            </p>
            <div class="btn-container">
              <button class="btn-primary" type="button" id="btnIniciar">INICIAR</button>
              <button class="btn-danger" type="button" id="btnParar">PARAR</button>
            </div>
          </div>

          <div class="resultado-aprovados">
            <h5 class="text-success">
              <i class="bx bx-check"></i> <svg id="toggleAprovados" xmlns="http://www.w3.org/2000/svg" width="1.2em"
                height="1.2em" viewBox="0 0 24 24" style="cursor: pointer;">
                <path fill="currentColor" fill-rule="evenodd"
