<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LofiCenter</title>
  <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
  <link rel="stylesheet" href="assets/bootstrap-5.1.3/css/bootstrap.min.css">
  <link type="text/css" rel="stylesheet" href="assets/jsgrid-1.5.3/jsgrid.min.css" />
  <link type="text/css" rel="stylesheet" href="assets/jsgrid-1.5.3/jsgrid-theme.min.css" />
  <link rel="stylesheet" href="assets/style/style.css">

  <style>
    .form-container {
      background-color: #131516;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .header-title {
      color: #a99e9e;
      text-align: center;
      margin-bottom: 20px;
    }

    .painel {
      background-color: #141516;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
    }

    .painel p {
      color: #ffb400;
    }

    .btn-container {
      display: flex;
      justify-content: space-between;
    }

    .btn-container button {
      width: 38%;
      padding: 5px 0;
      font-size: 18px;
      font-weight: bold;
    }

    .btn-primary {
      background-color: #3f6cff;
      color: #fff;
      border: none;
      border-radius: 50px;
    }

    .btn-danger {
      background-color: #2a1e2b;
      color: #7e7c89;
      border: none;
      border-radius: 50px;
    }

    .textarea-fixa {
      background-color: #000000;
      border-radius: 10px;
      padding: 20px;
      margin-bottom: 20px;
      color: #fff;
      border: none;
    }

    .resultado-aprovados,
    .resultado-reprovados {
      flex: 1;
      background-color: #141516;
      padding: 10px;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .resultado-aprovados h5,
    .resultado-reprovados h5 {
      margin-bottom: 10px;
    }

    footer {
      text-align: center;
      color: #7e7c89;
      padding: 20px 0;
    }
  </style>
</head>

<body class="dark-layout">

  <%- include('includes/header'); %>
    <%- include('includes/nav'); %>

      <main class="nt__main">
        <div class="form-container">
          <h2 class="header-title">ALLBINS GG [ <i class='bx bxl-visa'></i>/<i class='bx bxl-mastercard'></i> ]</h2>

          <form>

            <textarea class="textarea-fixa" id="exampleTextarea" rows="4"
              placeholder="Ex: 4984080001323389|07|2028|995"></textarea>
          </form>

          <div class="painel">
            <p class="text-primary"><strong><i class='bx bx-loader-alt'></i> Carregadas:</strong> <span
                id="carregadas">0</span></p>
            <p class="text-success"><strong><i class='bx bx-check'></i> Aprovadas:</strong> <span
                id="aprovadas">0</span></p>
            <p class="text-danger"><strong><i class='bx bx-x'></i> Reprovadas:</strong> <span id="reprovadas">0</span>
            </p>
            <div class="btn-container">
              <button class="btn-primary" type="button" id="btnIniciar">INICIAR</button>
              <button class="btn-danger" type="button" id="btnParar">PARAR</button>
            </div>
          </div>

          <div class="resultado-aprovados">
            <h5 class="text-success"><i class="bx bx-check"></i> Aprovados</h5>
            <ul id="listaAprovados"></ul>
          </div>

          <div class="resultado-reprovados">
            <h5 class="text-danger"><i class="bx bx-x"></i> Reprovados</h5>
            <ul id="listaReprovados"></ul>
          </div>

          <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 11;">
            <div class="toast text-success" id="notification" role="alert" aria-live="assertive" aria-atomic="true">
              <div class="toast-body text-success" id="notificationMessage"></div>
            </div>
          </div>
        </div>
        <footer>
          <p>2023 © LofiCenter</p>
        </footer>
      </main>

      <script src="assets/script/app.js" defer></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
      <script type="text/javascript" src="assets/jsgrid-1.5.3/jsgrid.min.js"></script>
      <script src="assets/script/jsgrid-example.js"></script>
      <script src="assets/bootstrap-5.1.3/js/bootstrap.min.js"></script>
      <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

      <script>
        $(document).ready(function () {
          let splitValueLista = [];
          let lastIndexProcessed = 0;

          // Função para exibir o toast de notificação
          function showNotification(message) {
            $('#notificationMessage').text(message);
            const toastElement = new bootstrap.Toast($('#notification')[0]); // Inicializa o toast do Bootstrap 5
            toastElement.show();
          }

          $('#btnIniciar').click(function () {
            const textareaValue = $('#exampleTextarea').val().trim();

            if (textareaValue === "") {
              // Exibir o toast com a mensagem de erro
              showNotification('INSIRA LISTA');
              return; // Não inicia o processamento se estiver vazio
            }

            splitValueLista = textareaValue.split('\n');
            $('#carregadas').text(splitValueLista.length);

            function processItem(index) {
              if (index >= splitValueLista.length) {
                return;
              }

              let value = splitValueLista[index];

              $.ajax({
                url: `/gateway/allbins2?gg=${encodeURIComponent(value)}`,
                method: 'GET',
                success: function (data) {
                  splitValueLista.splice(index, 1); 
                  $('#exampleTextarea').val(splitValueLista.join('\n')); 

                  if (data.status == 'inactive') {
                    $('#listaReprovados').append(`<li>❌ POR FAVOR COMPRE COM O ACESSO COM ADM @im_karmah</li>`);
                    $('#reprovadas').text(parseInt($('#reprovadas').text()) + 1);
                  } else if (data.response.includes("[Aprovada]")) {
                    console.log('APROV');
                    $('#listaAprovados').append(`<li>✅ ${data.response}</li>`);
                    $('#aprovadas').text(parseInt($('#aprovadas').text()) + 1);
                  } else {
                    $('#listaReprovados').append(`<li>❌ ${data.response}</li>`);
                    $('#reprovadas').text(parseInt($('#reprovadas').text()) + 1);
                  }

                  processItem(index); 
                },
                error: function (xhr, status, error) {
                  console.error(`Erro na requisição para ${value}:`, error);
                  processItem(index); 
                }
              });
            }

            processItem(lastIndexProcessed); 
          });

          $('#btnParar').click(function () {
            console.log('Parar clicado');
          });
        });


      </script>

</body>

</html>