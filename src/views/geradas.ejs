    <style>
        .form-container {
            background-color: #131516;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .header-title {
            color: #a99e9e;
            text-align: center;
            margin-bottom: 20px;
        }

        .painel {
            background-color: #141516;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .painel p {
            color: #ffb400;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
        }

        .btn-container button {
            width: 38%;
            padding: 5px 0;
            font-size: 18px;
            font-weight: bold;
        }

        .btn-primary {
            background-color: #3f6cff;
            color: #fff;
            border: none;
            border-radius: 50px;
        }

        .btn-danger {
            background-color: #2a1e2b;
            color: #7e7c89;
            border: none;
            border-radius: 50px;
        }

        .textarea-fixa {
            background-color: #000000;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            color: #fff;
            border: none;
        }

        .resultado-aprovados,
        .resultado-reprovados {
            flex: 1;
            background-color: #141516;
            padding: 10px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .resultado-aprovados h5,
        .resultado-reprovados h5 {
            margin-bottom: 10px;
        }

        footer {
            text-align: center;
            color: #7e7c89;
            padding: 20px 0;
        }
